<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
      <% if (language === 'ru') { %>ДЛЯ НЕЕ<% } else { %>FOR HER<% } %>
    </title>
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Anta&family=Kdam+Thmor+Pro&display=swap");
      body {
        margin: 0;
        padding: 0;
        background: #a07777;
        height: 100vh;
        overflow-x: hidden;
      }
      ::-webkit-scrollbar {
        width: 0;
      }
      header {
        text-align: center;
        position: relative;
        height: 100vh;
        overflow: hidden;
        justify-content: center;
        align-content: center;
        display: grid;
        background: #0000009e;
        grid-template-columns: 1fr;
        grid-template-rows: auto;
      }

      header img {
        width: 100%;
        filter: brightness(40%);
        object-fit: cover;
        height: 100vh;
      }

      .header_text {
        position: absolute;
        justify-content: center;
        top: 35vh;
        left: 41vw;
        color: #f2f2f2;
        font-family: "Anta", sans-serif;
        font-size: 64px;
        animation: fromTop 1.2s ease-out forwards;
      }
      .parfume_img {
        width: 270px;
        height: 330px;
        filter: brightness(90%);
        position: relative;
        left: 3px;
      }

      .parfume_list {
        display: flex;
        flex-wrap: wrap;
        justify-content: flex-start;
        background: #ffcbcb;
        margin: 0 auto;
        border-radius: 30px;
        width: 80%;
        max-width: 100%;
        align-items: flex-end;
      }

      .parfume_list ul {
        list-style-type: none;
        padding: 0;
        display: flex;
        font-family: "Kdam Thmor Pro", sans-serif;
        flex-wrap: wrap;
        justify-content: space-evenly;
      }

      .parfume_details {
        max-width: 300px;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        justify-content: center;
        margin-bottom: 20px;
      }

      .parfume_list li {
        display: flex;
        flex-direction: column;
        border-radius: 16px;
        margin-right: 10px;
        color: black;
        border: 2px solid black;
        margin-left: 20px;
        margin-bottom: 20px;
      }
      .parfumes {
        position: relative;
        top: 60px;
      }
      .action-buttons button {
        width: 100px;
        height: 30px;
        position: relative;
        justify-content: center;
        align-items: center;
        align-self: center;
        background: #fffbfb;
        border: none;
        font-size: 14px;
        font-weight: 500;
        border-radius: 20px;
        margin-left: 5px;
        display: flex;
        margin-top: 20px;
      }
      @keyframes fromTop {
        from {
          transform: translateY(50%);
        }
        to {
          transform: translateY(0);
        }
      }
      @keyframes fade-in {
        from {
          opacity: 0;
        }
        to {
          opacity: 1;
        }
      }
      .fade-in {
        animation: fade-in 2s ease-out;
      }
      .back a {
        text-decoration: none;
        color: snow;
        position: absolute;
        justify-content: center;
        font-family: "Anta", sans-serif;
        font-size: 24px;
        text-align: center;
        left: 40px;
        top: 50px;
      }
      .hidden {
        opacity: 0;
        filter: blur(5px);
        transform: translateY(20%);
        transition: all 1.7s;
      }
      .hidden2 {
        opacity: 0;
        filter: blur(5px);
        transform: translateY(30%);
        transition: all 1.5s;
      }
      .hidden3 {
        opacity: 0;
        filter: blur(5px);
        transform: translateY(20%);
        transition: all 1.3s;
      }
      .show2 {
        opacity: 1;
        filter: blur(0);
        transform: translateY(0);
      }
      .show {
        opacity: 1;
        filter: blur(0);
        transform: translateY(0);
      }
      .show3 {
        opacity: 1;
        filter: blur(0);
        transform: translateY(0);
      }
    </style>
  </head>
  <header class="fade-in">
    <img src="/img/forherBg.jpg" alt="" />
    <h2 class="header_text">
      <% if (language === 'ru') { %>ДЛЯ НЕЕ<% } else { %>FOR HER<% } %>
    </h2>
  </header>
  <body>
    <section class="parfumes">
      <div class="parfume_list hidden3">
        <ul>
          <% for (const parfume of parfumes) { %>
          <li class="hidden2">
            <img
              class="parfume_img hidden"
              src="/uploads/<%= parfume.image %>"
              alt="<%= parfume.name %> Image"
              onerror="console.error('Error loading image:', '<%= parfume.image %>')"
            />
            <div class="parfume_details">
              <strong>Name:</strong> <%= parfume.name %>
              <strong>Genre:</strong> <%= parfume.genre %>
              <strong>Price:</strong> <%= parfume.price %>&nbsp;$
              <div class="action-buttons">
                <button>BUY</button>
              </div>
            </div>
          </li>
          <% } %>
        </ul>
      </div>
    </section>
    <div class="back">
      <a href="/main"><i class="fa-solid fa-chevron-left"></i>&nbsp;BACK</a>
    </div>

    <script>
      const observer = new IntersectionObserver((entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add("show");
            entry.target.classList.add("show2");
            entry.target.classList.add("show3");
          } else {
            entry.target.classList.remove("show");
            entry.target.classList.remove("show2");
            entry.target.classList.remove("show3");
          }
        });
      });

      const hideElements = document.querySelectorAll(".hidden");
      const hideElements2 = document.querySelectorAll(".hidden2");
      const hideElements3 = document.querySelectorAll(".hidden3");
      hideElements.forEach((el) => observer.observe(el));
      hideElements2.forEach((el) => observer.observe(el));
      hideElements3.forEach((el) => observer.observe(el));
    </script>
  </body>
</html>
