<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
      <% if (language === 'ru') { %>СТРАНИЦА АДМИНИСТРАТОРА<% } else { %>ADMIN
      PAGE<% } %>
    </title>
  </head>
  <style>
    @import url("https://fonts.googleapis.com/css2?family=M+PLUS+Rounded+1c&display=swap");
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      user-select: none;
      -webkit-user-drag: none;
    }
    body {
      margin: 0;
      padding: 0;
      background: rgba(0, 0, 0, 0.95);
      overflow-x: hidden;
      font-family: "M PLUS Rounded 1c", sans-serif;
      scroll-behavior: smooth;
      height: 125vh;
      color: snow;
    }

    ::-webkit-scrollbar {
      width: 0;
    }
    .parfume_img {
      width: 270px;
      height: 330px;
      position: relative;
      left: 3px;
      filter: contrast(120%);
    }

    .parfume_list {
      display: flex;
      flex-wrap: wrap;
      justify-content: flex-start;
      background: rgba(0, 0, 0, 0.95);
      border: 1.5px solid #f2f2f2;
      margin: 0 auto;
      border-radius: 30px;
      width: 80%;
      padding: 30px;
      max-width: 100%;
      align-items: flex-end;
    }

    .parfume_list ul {
      list-style-type: none;
      padding: 0;
      display: flex;
      flex-wrap: wrap;
      justify-content: space-evenly;
    }

    .parfume_details {
      max-width: 300px;
      display: flex;
      flex-direction: column;
      align-items: center;
      text-align: center;
      justify-content: center;
      margin-bottom: 20px;
    }

    .parfume_list li {
      display: flex;
      flex-direction: column;
      border-radius: 16px;
      margin-right: 10px;
      color: snow;
      border: 2px solid snow;
      margin-left: 20px;
      margin-bottom: 20px;
      animation: fade-in-top 2.2s ease-out forwards;
    }

    @keyframes fade-in-top {
      from {
        opacity: 0;
        transform: translateY(-5%);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    .action-buttons {
      margin-top: 10px;
      display: flex;
      gap: 10px;
    }

    .users {
      position: relative;
      display: flex;
      justify-content: center;
      padding: 15px;
      background: rgba(0, 0, 0, 0.95);
      border-bottom: 2px solid snow;
      align-items: center;
      flex-direction: column;
    }

    .users ul {
      list-style: none;
      display: flex;
      position: relative;
    }
    .users ul li {
      font-size: 18px;
      display: flex;
      flex-direction: row;
    }
    .users strong {
      display: flex;
      position: relative;
      padding-left: 20px;
    }

    .parfumes h2 {
      text-align: center;
      margin-bottom: 20px;
    }

    .parfumes {
      position: relative;
      top: 60px;
    }

    .add_parfume {
      width: clamp(360px, 80%, 530px);
      height: clamp(180px, 50%, 330px);
      display: flex;
      position: relative;
      top: 60px;
      justify-content: center;
      align-items: center;
      margin-bottom: 15%;
      flex-direction: column;
      margin: 20px auto;
      border-radius: 16px;
    }

    .add_parfume form {
      display: flex;
      top: 60px;
      flex-direction: column;
      margin-top: 10px;
      position: relative;
      justify-content: center;
      align-items: center;
      margin-bottom: 15%;
      text-align: center;
      align-self: center;
      border-radius: 8px;
      width: clamp(250px, 70%, 370px);
      height: clamp(120px, 70%, 195px);
    }

    .add_parfume input {
      width: clamp(230px, 92%, 345px);
      margin-left: 10px;
      height: 40px;
      margin-bottom: 10px;
      font-size: 16px;
      font-size: clamp(14px, 3vw, 16px);
      color: #f2f2f2;
      border: none;
      background: transparent;
      border-bottom: 2px solid #f2f2f2;
      outline: none;
    }

    .add_parfume input::placeholder {
      color: #f2f2f2;
      font-family: "Kode Mono", monospace;
    }

    .action-buttons button {
      width: 100px;
      height: 30px;
      position: relative;
      justify-content: center;
      align-items: center;
      align-self: center;
      background: #ffffff;
      border: none;
      font-size: 14px;
      font-weight: 500;
      border-radius: 20px;
      margin-left: 5px;
      display: flex;
    }

    .add_parfume button {
      width: 150px;
      height: 40px;
      position: relative;
      justify-content: center;
      align-items: center;
      align-self: center;
      background: #ffffff;
      border: none;
      font-size: 14px;
      font-weight: 500;
      border-radius: 20px;
      display: flex;
    }

    .user_btn {
      width: 100px;
      height: 30px;
      position: relative;
      justify-content: center;
      align-items: center;
      align-self: center;
      background: #ffffff;
      border: none;
      font-size: 14px;
      font-weight: 500;
      border-radius: 20px;
      margin-left: 5px;
      display: flex;
    }

    @keyframes fade-in {
      from {
        opacity: 0;
      }
      to {
        opacity: 1;
      }
    }
    .fade-in {
      animation: fade-in 2s ease-out;
    }
    .updatePrice {
      padding-top: 10px;
    }
    .updatePrice label {
      font-size: 16px;
      font-family: "Kode Mono", monospace;
    }
    .updatePrice input {
      outline: none;
      font-size: 16px;
      background: transparent;
      border: none;
      color: snow;
      border-bottom: 2px solid snow;
    }
    .updatePrice button {
      margin-top: 15px;
      width: 120px;
      height: 25px;
      position: relative;
      justify-content: center;
      align-items: center;
      align-self: center;
      background: #ffffff;
      border: none;
      font-size: 14px;
      font-weight: 500;
      border-radius: 20px;
      display: flex;
    }
  </style>
  <body>
    <section class="users">
      <h2>
        <% if (language === 'ru') { %>ПОЛЬЗОВАТЕЛИ<% } else { %>USERS<% } %>
      </h2>
      <ul>
        <% for (const user of users) { %>
        <li>
          <strong
            ><% if (language === 'ru') { %>ИМЯ:<% } else { %>NAME:<% }
            %>&nbsp;</strong
          >
          <%= user.username %>
          <strong
            ><% if (language === 'ru') { %>ПОЧТА:<% } else { %>EMAIL:<% }
            %>&nbsp;</strong
          >
          <%= user.email %>
          <strong
            ><% if (language === 'ru') { %>РОЛЬ:<% } else { %>ROLE:<% }
            %>&nbsp;</strong
          >
          <%=user.role %> <% if (user.role !== 'admin') { %>
          <button onclick="deleteUser('<%= user._id %>')" class="user_btn">
            <% if (language === 'ru') { %>УДАЛИТЬ<% } else { %>DELETE<% } %>
          </button>
          <% } %>
        </li>
        <% } %>
      </ul>
    </section>
    <section class="parfumes">
      <h2>
        <% if (language === 'ru') { %>ПАРФЮМЫ В НАЛИЧИИ<% } else { %>ADDED
        PARFUMES<% } %>
      </h2>
      <div class="parfume_list">
        <ul>
          <% for (const parfume of parfumes) { %>
          <li>
            <img
              class="parfume_img"
              src="/uploads/<%= parfume.image %>"
              alt="<%= parfume.name %> Image"
              onerror="console.error('Error loading image:', '<%= parfume.image %>')"
            />
            <div class="parfume_details fade-in">
              <strong>Name:</strong> <%= parfume.name %>
              <strong>Genre:</strong> <%= parfume.genre %>
              <strong>Price:</strong> <%= parfume.price %>$
              <div class="action-buttons">
                <button onclick="deleteParfume('<%= parfume._id %>')">
                  <% if (language === 'ru') { %>УДАЛИТЬ<% } else { %>REMOVE<%
                  }%>
                </button>
              </div>
              <form
                action="/updateparfume/<%= parfume._id %>"
                method="post"
                class="updatePrice"
              >
                <label for="newPrice">
                  <% if (language === 'ru') { %>НОВАЯ ЦЕНА<% } else { %>NEW
                  PRICE<% }%>
                </label>
                <input type="number" id="newPrice" name="newPrice" required />
                <button type="submit">
                  <% if (language === 'ru') { %>ОБНОВИТЬ ЦЕНУ<% } else {
                  %>UPDATE PRICE<% }%>
                </button>
              </form>
            </div>
          </li>
          <% } %>
        </ul>
      </div>
    </section>
    <section class="add_parfume">
      <h2>
        <% if (language === 'ru') { %>ДОБАВИТЬ НОВЫЙ ПАРФЮМ<% } else { %>ADD NEW
        PARFUM<% } %>
      </h2>
      <form
        action="/admin/addparfume"
        method="post"
        enctype="multipart/form-data"
      >
        <label for="name"
          ><% if (language === 'ru') { %>НАЗВАНИЕ ПАРФЮМА<% } else { %>NAME<% }
          %></label
        >
        <input type="text" id="name" name="name" required />
        <br />

        <label for="genre">MALE | FEMALE</label>
        <input type="text" id="genre" name="genre" required />
        <br />

        <label for="price"
          ><% if (language === 'ru') { %>ЦЕНА<% } else { %>PRICE<% } %></label
        >
        <input type="number" id="price" name="price" required />
        <br />

        <label for="image"
          ><% if (language === 'ru') { %>ФОТО<% } else { %>IMAGE<% } %></label
        >
        <input type="file" id="image" name="image" accept=".png" required />
        <br />
        <button type="submit">
          <% if (language === 'ru') { %>ДОБАВИТЬ<% } else { %>ADD PARFUME<% } %>
        </button>
      </form>
    </section>

    <script>
      function deleteParfume(parfumeId) {
        fetch(`/deleteparfume/${parfumeId}`, {
          method: "DELETE",
          headers: {
            "Content-Type": "application/json",
          },
        })
          .then((response) => {
            if (response.ok) {
              window.location.reload();
            } else {
              console.error("Error deleting parfume:", response.statusText);
            }
          })
          .catch((error) => {
            console.error("Error deleting parfume:", error.message);
          });
      }

      function deleteUser(userId) {
        fetch(`/deleteuser/${userId}`, {
          method: "DELETE",
          headers: {
            "Content-Type": "application/json",
          },
        })
          .then((response) => {
            if (response.ok) {
              window.location.reload();
            } else {
              console.error("Error deleting user:", response.statusText);
            }
          })
          .catch((error) => {
            console.error("Error deleting user:", error.message);
          });
      }
    </script>
  </body>
</html>
